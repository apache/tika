FROM inception-rest-tika
MAINTAINER Apache Tika Team

#Install python pillow. TODO: Remove this with the fix for TIKA 2398
RUN pip install pillow

# Download the pretrained im2txt checkpoint
WORKDIR /usr/share/apache-tika/models/dl/image/caption/

RUN \
    wget https://www.dropbox.com/s/l9ignjpjk774n2z/model_main_untuned.zip?dl=0 \
        -O model_main_untuned.zip && \
        unzip model_main_untuned.zip && \
        rm -rf model_main_untuned.zip && \

    wget https://raw.githubusercontent.com/ThejanW/tika/master/tika-parsers/src/main/resources/org/apache/tika/parser/captioning/tf/model_info.xml \
        -O model_info.xml

# Download server related source files
WORKDIR /usr/share/apache-tika/src/dl/image/caption/

RUN \
    wget https://raw.githubusercontent.com/ThejanW/tika/master/tika-parsers/src/main/resources/org/apache/tika/parser/captioning/tf/caption_generator.py \
        -O caption_generator.py && \

    wget https://raw.githubusercontent.com/ThejanW/tika/master/tika-parsers/src/main/resources/org/apache/tika/parser/captioning/tf/im2txtapi.py \
        -O im2txtapi.py && \

    wget https://raw.githubusercontent.com/ThejanW/tika/master/tika-parsers/src/main/resources/org/apache/tika/parser/captioning/tf/model_wrapper.py \
        -O model_wrapper.py && \

    wget https://raw.githubusercontent.com/ThejanW/tika/master/tika-parsers/src/main/resources/org/apache/tika/parser/captioning/tf/vocabulary.py \
        -O vocabulary.py && \

    chmod +x im2txtapi.py

WORKDIR /

# Add symbolic link to im2txtapi.py
RUN ln -s /usr/share/apache-tika/src/dl/image/caption/im2txtapi.py /usr/bin/im2txtapi

# expose API port, this is the default port
EXPOSE 8764

CMD im2txtapi