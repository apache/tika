{
  "fetchers": {
    "fsf": {
      "file-system-fetcher": {
        "basePath": "FETCHER_BASE_PATH"
      }
    }
  },
  "emitters": {
    "ose": {
      "opensearch-emitter": {
        "openSearchUrl": "OPEN_SEARCH_URL",
        "updateStrategy": "UPDATE_STRATEGY",
        "attachmentStrategy": "ATTACHMENT_STRATEGY",
        "commitWithin": 10,
        "idField": "_id",
        "embeddedFileFieldName": "embedded",
        "httpClientConfig": {
          "userName": "USER_NAME",
          "password": "PASSWORD",
          "authScheme": "http",
          "connectionTimeout": 60,
          "socketTimeout": 60
        }
      }
    }
  },
  "pipes-iterator": {
    "file-system-pipes-iterator": {
      "basePath": "FETCHER_BASE_PATH",
      "countTotal": true,
      "baseConfig": {
        "fetcherId": "fsf",
        "emitterId": "ose",
        "handlerConfig": {
          "type": "TEXT",
          "parseMode": "PARSE_MODE",
          "writeLimit": -1,
          "maxEmbeddedResources": -1,
          "throwOnWriteLimitReached": true
        },
        "onParseException": "EMIT",
        "maxWaitMs": 600000,
        "queueSize": 10000
      }
    }
  },
  "pipes-reporters": {
    "opensearch-pipes-reporter": {
      "openSearchUrl": "OPEN_SEARCH_URL",
      "keyPrefix": "my_test_",
      "includeRouting": "INCLUDE_ROUTING",
      "httpClientConfig": {
        "userName": "USER_NAME",
        "password": "PASSWORD",
        "authScheme": "http",
        "connectionTimeout": 60,
        "socketTimeout": 60
      }
    }
  },
  "pipes": {
    "emitStrategy": {
      "type": "DYNAMIC",
      "thresholdBytes": 10000
    },
    "emitMaxEstimatedBytes": 100000,
    "emitWithinMillis": 60000,
    "numEmitters": 1,
    "numClients": 3,
    "forkedJvmArgs": [
      "-Xmx512m",
      "-XX:ParallelGCThreads=2",
      "-Dlog4j.configurationFile=LOG4J_PROPERTIES_FILE"
    ],
    "timeoutMillis": 60000
  },
  "metadata-filters": [
    {
      "date-normalizing-metadata-filter": {}
    },
    {
      "field-name-mapping-filter": {
        "excludeUnmapped": true,
        "mappings": {
          "X-TIKA:content": "content",
          "Content-Length": "length",
          "dc:creator": "creators",
          "dc:title": "title",
          "Content-Type": "mime",
          "X-TIKA:EXCEPTION:container_exception": "tika_exception"
        }
      }
    }
  ],

  "plugin-roots": "target/plugins"
}