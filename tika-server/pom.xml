    <connection>scm:svn:http://svn.apache.org/repos/asf/tika/tags/1.8-rc2/tika-server</connection>
    <developerConnection>scm:svn:https://svn.apache.org/repos/asf/tika/tags/1.8-rc2/tika-server</developerConnection>
